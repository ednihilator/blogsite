{{!-- not sure how much of this we need, since it shows posts you've made and we don't need to see all our posts we made? --}}
<div class="row">
  <div class="col-auto">
    <h2>Welcome {{name}}!</h2>
  </div>
</div>

<div class="row mt-4">
  <div class="col-md-6">
    

    <form class="form new-post-form">
      <div class="form-group">
        <label for="post-title">Title:</label>
        <textarea class="form-input" id="post-title" name="post-title"></textarea>
      </div>
      <div class="form-group">
        <label for="post-content">Content:</label>
        <textarea class="form-input" id="post-content" name="post-content"></textarea>
      </div>
      <div class="form-group">
        <button type="submit" class="btn btn-primary">Post</button>
      </div>
    </form>
  </div>


  {{#if posts.length}}
  <div class="col-md-6 post-list">
    <h3>Posts made by {{name}} </h3>

    {{#each posts as |post|}}
    <div class="row mb-2">
      <div class="col-md-8">
        <h4><a href="/post/{{id}}">{{title}}</a></h4>
      </div>
      <div class="col-md-4">
        <button class="btn btn-sm btn-danger" data-id="{{id}}">DELETE</button>
      </div>
    </div>
    {{/each}}
  </div>
  {{/if}}
</div>

<script src="./js/dashboard.js"></script>